@* --- _CommentsThread.cshtml : Patient–Clinician notes & messages --- *@
<div class="card shadow-sm">
    <div class="card-header fw-semibold">
        <i class="bi bi-chat-dots text-primary me-2"></i>Session Comments
    </div>
    <div class="card-body" id="commentsThread">
        <div class="d-flex align-items-start mb-3">
            <div class="avatar clinician me-3">C</div>
            <div>
                <div class="fw-semibold">Clinician</div>
                <div class="small text-muted mb-1">2 mins ago</div>
                <div class="comment-bubble bg-transparent border rounded p-2">
                    Please reposition the patient to relieve pressure on the left flank.
                </div>
            </div>
        </div>

        <div class="d-flex align-items-start mb-3">
            <div class="avatar patient me-3">P</div>
            <div>
                <div class="fw-semibold">Patient</div>
                <div class="small text-muted mb-1">Just now</div>
                <div class="comment-bubble bg-transparent border rounded p-2">
                    Understood, I’ve adjusted my position slightly. Pressure feels more even now.
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        <form id="commentForm" class="d-flex align-items-center gap-2">
            <input type="text" id="commentInput" class="form-control" placeholder="Type a message..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i>
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("commentForm").addEventListener("submit", function (e) {
            e.preventDefault();
            const input = document.getElementById("commentInput");
            if (!input.value.trim()) return;

            const thread = document.getElementById("commentsThread");
            const msg = document.createElement("div");
            msg.className = "d-flex align-items-start mb-3";
            msg.innerHTML = `
                <div class="avatar patient me-3">P</div>
                <div>
                    <div class="fw-semibold">Patient</div>
                    <div class="small text-muted mb-1">Just now</div>
                    <div class="comment-bubble bg-transparent border rounded p-2">${input.value}</div>
                </div>`;
            thread.appendChild(msg);
            input.value = "";
            thread.scrollTop = thread.scrollHeight;
        });
    </script>
}
