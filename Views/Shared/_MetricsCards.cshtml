@* --- _MetricsCards.cshtml : Compact KPI overview cards --- *@
<div class="row g-3">
    <div class="col-md-3 col-sm-6">
        <div class="card kpi text-center">
            <div class="card-body">
                <div class="kpi-label"><i class="bi bi-activity me-2"></i>Avg Pressure</div>
                <div class="kpi-value">82<span class="fs-5 ms-1">mmHg</span></div>
                <div class="kpi-subtext text-muted small">Last 24 hrs</div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card kpi text-center">
            <div class="card-body">
                <div class="kpi-label"><i class="bi bi-thermometer-sun me-2"></i>Risk Level</div>
                <div class="kpi-value text-warning">Moderate</div>
                <div class="kpi-subtext small">3 alerts flagged</div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card kpi text-center">
            <div class="card-body">
                <div class="kpi-label"><i class="bi bi-clock-history me-2"></i>Session Time</div>
                <div class="kpi-value">6h 42m</div>
                <div class="kpi-subtext small">Ongoing session</div>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6">
        <div class="card kpi text-center">
            <div class="card-body">
                <div class="kpi-label"><i class="bi bi-person-heart me-2"></i>Comfort Index</div>
                <div class="kpi-value text-success">92%</div>
                <div class="kpi-subtext small">Stable condition</div>
            </div>
        </div>
    </div>
</div>
