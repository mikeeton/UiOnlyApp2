@{
    var user = Context.User;
    var isAuthenticated = user?.Identity?.IsAuthenticated ?? false;
    var role = user?.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}
<nav class="navbar navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <i class="bi bi-cpu me-2 text-primary"></i>GrapheneTrace
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                @if (!isAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"]?.ToString() == "Login" ? "active" : "")"
                           asp-controller="Account" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                    </li>
                }
                else
                {
                    if (role == "Patient")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Patient Dashboard" ? "active" : "")"
                               asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-heart-pulse me-1"></i>Patient
                            </a>
                        </li>
                    }
                    else if (role == "Clinician")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Clinician Dashboard" ? "active" : "")"
                               asp-controller="Dashboard" asp-action="Clinician">
                                <i class="bi bi-person-workspace me-1"></i>Clinician
                            </a>
                        </li>
                    }
                    else if (role == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["Title"]?.ToString() == "Admin Dashboard" ? "active" : "")"
                               asp-controller="Dashboard" asp-action="Admin">
                                <i class="bi bi-gear-wide-connected me-1"></i>Admin
                            </a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
