@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-5">
            <div class="card p-4 rounded-4 shadow-sm">
                <h3 class="fw-semibold mb-1">Demo Login</h3>
                <p class="text-muted mb-4">Pick a role and (optionally) a display name.</p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">Please select a role.</div>
                }

                <form asp-controller="Account" asp-action="Login" method="post" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <div class="mb-3">
                        <label class="form-label">Display Name (optional)</label>
                        <input class="form-control" name="displayName" placeholder="e.g. Michael" />
                    </div>

                    <label class="form-label">Login as</label>
                    <div class="feature mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="rPatient" name="role" value="Patient" checked />
                            <label class="form-check-label" for="rPatient">Patient</label>
                        </div>
                    </div>
                    <div class="feature mb-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="rClinician" name="role" value="Clinician" />
                            <label class="form-check-label" for="rClinician">Clinician</label>
                        </div>
                    </div>
                    <div class="feature mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="rAdmin" name="role" value="Admin" />
                            <label class="form-check-label" for="rAdmin">Admin</label>
                        </div>
                    </div>

                    <button class="btn btn-primary w-100 btn-lg" type="submit">Sign In</button>
                    <div class="small text-muted mt-2">No password; this is a demo that sets a role claim in a cookie.</div>
                </form>
            </div>
        </div>
    </div>
</div>
