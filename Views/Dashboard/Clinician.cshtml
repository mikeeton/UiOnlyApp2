@{
    ViewData["Title"] = "Clinician Dashboard";
}

<div class="container py-4">

    <!-- HERO / INTRO -->
    <section class="mb-4">
        <div class="hero-slab p-4 p-md-5 text-light d-flex flex-column justify-content-center">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                <div>
                    <span class="badge text-bg-primary mb-3">Clinician view</span>
                    <h1 class="display-6 mb-2">
                        Patient monitoring workspace
                    </h1>
                    <p class="text-muted mb-0">
                        Review pressure mapping trends, spot high-risk sessions, and drill into individual
                        patients’ heatmaps. All metrics are computed from the same sensor data used in
                        the patient view.
                    </p>
                    <div class="mt-3 small text-muted">
                        <i class="bi bi-people me-1"></i> Multi-patient oversight
                        <span class="mx-2">•</span>
                        <i class="bi bi-bell me-1"></i> High-risk flags
                    </div>
                </div>

                <div class="text-md-end small text-muted">
                    <div class="mb-2">
                        <div class="text-uppercase" style="letter-spacing:.12em;">Select patient</div>
                        <select id="clinPatientSelect"
                                class="form-select form-select-sm mt-1"
                                style="min-width:210px;">
                            <option value="">Choose patient...</option>
                        </select>
                    </div>

                    <div>
                        <div class="text-uppercase mb-1" style="letter-spacing:.12em;">Time window</div>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button"
                                    class="btn btn-outline-secondary active"
                                    data-clin-range="24">
                                Last 24h
                            </button>
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    data-clin-range="72">
                                3 days
                            </button>
                            <button type="button"
                                    class="btn btn-outline-secondary"
                                    data-clin-range="all">
                                All
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TREND + HEATMAP -->
    <section class="mb-4">
        <div class="row g-3">
            <!-- Trend overview -->
            <div class="col-lg-7">
                <div class="card shadow-sm h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small text-muted mb-1">Trend overview</div>
                            <div class="fw-semibold">Select a patient to view their sessions</div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="ratio ratio-16x9">
                            <canvas id="clinTrendChart"></canvas>
                        </div>
                        <p class="small text-muted mt-3 mb-0">
                            Blue: <span class="fw-semibold">Peak Pressure Index</span> (max sensor pressure per session).
                            Green: <span class="fw-semibold">Contact Area %</span> (percentage of sensors above load threshold).
                        </p>
                    </div>
                </div>
            </div>

            <!-- Heatmap -->
            <div class="col-lg-5">
                <div class="card heatmap-card shadow-sm h-100">
                    <div class="card-header fw-semibold d-flex align-items-center gap-2">
                        <i class="bi bi-grid-3x3-gap-fill text-primary me-2"></i>
                        <span>Pressure Map</span>

                        <div class="ms-auto d-flex flex-wrap gap-2 align-items-center">
                            <select id="clinHmDate" class="form-select form-select-sm" style="min-width:140px;">
                                <option value="">Date...</option>
                            </select>

                            <select id="clinHmPalette" class="form-select form-select-sm">
                                <option value="default">Default Palette</option>
                                <option value="warm">Warm Gradient</option>
                                <option value="cool">Cool Gradient</option>
                                <option value="contrast">High Contrast</option>
                            </select>
                        </div>
                    </div>

                    <div class="card-body p-0 d-flex flex-column">
                        <div class="heatmap-wrap ratio ratio-1x1">
                            <canvas id="clinHeatmapCanvas"></canvas>
                        </div>

                        <!-- KPI row under heatmap -->
                        <div class="d-flex flex-wrap justify-content-between gap-3 px-3 pt-3 pb-2 small">
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Peak Pressure Index
                                </div>
                                <div id="clinHmPpi" class="fw-bold">—</div>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Contact Area %
                                </div>
                                <div id="clinHmContact" class="fw-bold">—</div>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Status
                                </div>
                                <div id="clinHmStatus" class="fw-bold">—</div>
                            </div>
                        </div>

                        <div class="px-3 pb-3 small text-muted" id="clinHmStatusText">
                            Select a patient and date to load a session heatmap.
                        </div>
                    </div>

                    <div class="card-footer small d-flex justify-content-between text-muted">
                        <span id="clinHmSessionCaption">—</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Lower panels (risk flags / notes) – keep your existing content here if you have it -->
    <section class="mb-4">
        <div class="row g-3">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <span class="fw-semibold">Risk flags</span>
                    </div>
                    <div class="card-body small text-muted">
                        Select a patient to see recent high-risk sessions.
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header fw-semibold">Clinician notes</div>
                    <div class="card-body small text-muted">
                        Use this space to record your observations for each patient’s pressure profile,
                        including posture advice and follow-up actions.
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <!-- Page-specific helpers for charts + heatmap -->
    <script src="~/js/charts.js" asp-append-version="true"></script>
    <script src="~/js/heatmap.js" asp-append-version="true"></script>
}
