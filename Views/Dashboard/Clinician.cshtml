@{
    ViewData["Title"] = "Clinician Dashboard";
}

<div class="container py-4">

    <!-- HERO / INTRO -->
    <section class="mb-4">
        <div class="hero-slab p-4 p-md-5 text-light d-flex flex-column justify-content-center">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                <div>
                    <span class="badge text-bg-primary mb-3">Clinician view</span>
                    <h1 class="display-6 mb-2">
                        Patient monitoring workspace
                    </h1>
                    <p class="text-muted mb-0">
                        Review pressure mapping trends, spot high-risk sessions, and drill into individual
                        patients’ heatmaps. All metrics are computed from the same sensor data used in the
                        patient view.
                    </p>
                    <div class="mt-3 small text-muted">
                        <i class="bi bi-people-fill me-1"></i> Multi-patient oversight
                        <span class="mx-2">•</span>
                        <i class="bi bi-bell-fill me-1"></i> High-risk flags
                    </div>
                </div>

                <div class="text-md-end small text-muted">
                    <div class="mb-2">
                        <span class="text-uppercase" style="letter-spacing:.12em;">Select patient</span><br />
                        <select id="clinPatient"
                                class="form-select form-select-sm mt-1"
                                style="min-width: 220px;">
                            <option value="">Choose patient…</option>
                        </select>
                    </div>

                    <div class="mt-3">
                        <span class="text-uppercase" style="letter-spacing:.12em;">Time window</span><br />
                        <div class="btn-group mt-1" role="group" aria-label="Time window">
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm"
                                    data-clin-range="1">
                                Last 1h
                            </button>
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm"
                                    data-clin-range="6">
                                Last 6h
                            </button>
                            <button type="button"
                                    class="btn btn-outline-secondary btn-sm active"
                                    data-clin-range="24">
                                Last 24h
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TREND + HEATMAP ROW -->
    <section class="mb-4">
        <div class="row g-3">
            <!-- Trend overview -->
            <div class="col-lg-7">
                <div class="card shadow-sm h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-uppercase small text-muted mb-1">Trend overview</div>
                            <div class="fw-semibold">Select a patient to view their sessions</div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="ratio ratio-16x9">
                            <canvas id="clinTrendChart"></canvas>
                        </div>
                        <p class="small text-muted mt-3 mb-0">
                            Blue: <span class="fw-semibold">Peak Pressure Index</span> (max sensor pressure per session).<br />
                            Green: <span class="fw-semibold">Contact Area %</span> (percentage of sensors above load threshold).
                        </p>
                    </div>
                </div>
            </div>

            <!-- Heatmap card -->
            <div class="col-lg-5">
                <div class="card heatmap-card shadow-sm h-100">
                    <div class="card-header fw-semibold d-flex align-items-center gap-2">
                        <i class="bi bi-grid-3x3-gap-fill text-primary me-2"></i>
                        <span>Pressure Map</span>

                        <div class="ms-auto d-flex flex-wrap gap-2 align-items-center">
                            <select id="clinDate" class="form-select form-select-sm" style="min-width: 140px;">
                                <option value="">Date…</option>
                            </select>

                            <select id="clinPalette" class="form-select form-select-sm">
                                <option value="default">Default Palette</option>
                                <option value="warm">Warm Gradient</option>
                                <option value="cool">Cool Gradient</option>
                                <option value="contrast">High Contrast</option>
                            </select>
                        </div>
                    </div>

                    <div class="card-body p-0 d-flex flex-column">
                        <div class="heatmap-wrap ratio ratio-1x1">
                            <canvas id="clinHeatmapCanvas"></canvas>
                        </div>

                        <!-- KPI row -->
                        <div class="d-flex flex-wrap justify-content-between gap-3 px-3 pt-3 pb-2 small">
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Peak Pressure Index
                                </div>
                                <div id="clinKpiPpi" class="fw-bold">—</div>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Contact Area %
                                </div>
                                <div id="clinKpiContact" class="fw-bold">—</div>
                            </div>
                            <div>
                                <div class="text-muted text-uppercase" style="font-size:.7rem;letter-spacing:.12em;">
                                    Status
                                </div>
                                <div id="clinKpiStatus" class="fw-bold">—</div>
                            </div>
                        </div>

                        <!-- Playback controls -->
                        <div class="px-3 pb-3 d-flex align-items-center gap-3">
                            <button id="clinHmBtnPlay" class="btn btn-sm btn-outline-light rounded-circle">
                                <i class="bi bi-play-fill"></i>
                            </button>
                            <input id="clinHmFrameSlider"
                                   type="range"
                                   class="form-range flex-grow-1"
                                   min="0" max="0" value="0" />
                            <small id="clinHmFrameTime" class="text-muted">0.0s / 0.0s</small>
                        </div>

                        <div class="px-3 pb-3 small text-muted" id="clinHmStatusText">
                            Select a patient and date to load a session heatmap.
                        </div>
                    </div>

                    <div class="card-footer small d-flex justify-content-between text-muted">
                        <span id="clinHmSessionCaption">—</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- RISK FLAGS + CLINICIAN NOTES -->
    <section class="mb-4">
        <div class="row g-3">
            <!-- Risk flags -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Risk flags</span>
                    </div>
                    <div class="card-body">
                        <div id="clinRiskEmpty" class="text-muted small">
                            Select a patient to see their recent high-risk sessions.
                        </div>

                        <ul id="clinRiskList"
                            class="list-group list-group-flush d-none">
                            <!-- Filled by JS -->
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Clinician notes -->
            <div class="col-lg-6">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Clinician notes</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <!-- Thread -->
                        <div id="clinNotesThread"
                             class="mb-3 small"
                             style="max-height: 260px; overflow-y: auto;">
                            <div class="text-muted">
                                Select a patient to view or add notes.
                            </div>
                        </div>

                        <!-- Input -->
                        <div class="input-group mt-auto">
                            <input id="clinNoteInput"
                                   type="text"
                                   class="form-control"
                                   placeholder="Add a note about this patient..." />
                            <button id="clinNoteSend"
                                    class="btn btn-primary">
                                <i class="bi bi-send"></i>
                                <span class="ms-1">Send</span>
                            </button>
                        </div>

                        <small id="clinNotesStatus"
                               class="text-muted mt-2">
                            Notes are stored in this browser only (demo only).
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
