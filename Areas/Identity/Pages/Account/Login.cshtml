@page
@model UiOnlyApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="auth-shell">
    <div class="auth-card shadow-lg">
        <div class="auth-card-header">
            <h1 class="auth-title">Welcome back</h1>
            <p class="auth-subtitle">
                Sign in to continue to <strong>Sensore</strong>.
            </p>
        </div>

        <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email"
                       class="form-control form-control-lg"
                       autocomplete="username"
                       aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <a asp-page="./ForgotPassword" class="link-muted small">
                        Forgot password?
                    </a>
                </div>
                <input asp-for="Input.Password"
                       class="form-control form-control-lg"
                       autocomplete="current-password"
                       aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label"></label>
                </div>

                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-muted small">
                    New here? Create an account
                </a>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
                Log in
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
